<div clasnode --trace-deprecation ...s="form-group">
    <label for="title">Title</label>
    <input required value="<%= article.title %>" class="form-control" type="text" name="title" id="title">
</div>
<div class="form-group mt-4">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group mt-4 mb-4">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>
<div class="form-group mt-4 mb-4">
    <label for="image">Image</label>
    <input value="<%= article.imagePath %>" class="form-control" type="file" name="uploaded_file" id="uploaded_file">
</div>

<a href="/articles" class="btn btn-secondary">Cancel</a>
<button class="btn btn-primary" type="submit">Save</button>